{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "target": "ESNext",
    "module": "<%= module %>",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    <% if (noEmit) { %>
      "noEmit": true,
    <% } %>
    <% if (declaration) { %>
      "declaration": true,
    <% } %>
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "outDir": "<%= outDir %>"
  },
  "include": [
    "<%= include %>"
  ],
  "exclude": [
    "node_modules"
  ]
}
